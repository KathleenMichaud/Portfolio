---
import hearts from "../assets/images/coeurs.png";
import Link from "./Link.astro";
const { title, imgSrc, projet } = Astro.props;
---
<article class="relative group shadow-2xl">
    <figure class="mb-3 block">
        <img src={imgSrc} />
    </figure>
    <div class="absolute opacity-0 group-hover:opacity-100 transition-opacity inset-0 bg-[rgba(0,0,0,0.7)] p-4 flex flex-col justify-center items-center">
        <h3 class="text-2xl font-bold uppercase ">
            <img src={hearts.src} class="mx-auto mb-2 max-h-[1.5em]" />
            {title}
        </h3>
        <slot name="content" />
        <Link href={`/${projet}`} class="absolute inset-0"/>
    </div>
</article>